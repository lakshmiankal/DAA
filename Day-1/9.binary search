def binary_search(arr, key):
     left, right = 0, len(arr) - 1
      while left <= right:
        mid = (left + right) // 2
        if arr[mid] == key:
            return mid  # Return the index if found
        elif arr[mid] < key:
            left = mid + 1
       else:
            right = mid - 1
  return -1
