def champagneTower(poured, query_row, query_glass):
    glasses = [[0] * (i + 1) for i in range(101)]
    glasses[0][0] = poured
    for i in range(100):  # We only need to process up to row 100
        for j in range(i + 1):  # Only process the glasses that have been filled
            if glasses[i][j] > 1:  # If the glass overflows
                excess = glasses[i][j] - 1  # Calculate the excess
                glasses[i][j] = 1  # Set the current glass to full
                # Distribute the excess to the glasses below
                glasses[i + 1][j] += excess / 2  # Left glass
                glasses[i + 1][j + 1] += excess / 2  # Right glass
    return min(1, glasses[query_row][query_glass])  # A glass can't hold more than 1

# Example Test Cases
print(champagneTower(1, 1, 1))  # Output: 0.00000
print(champagneTower(2, 1, 1))  # Output: 0.50000
